<script>
function downloadResult(filename, text) {
const element = document.createElement('a');
element.setAttribute('href', 'data:text/plain;charset=utf-8,' + encodeURIComponent(text));
element.setAttribute('download', filename);
element.style.display = 'none';
document.body.appendChild(element);
element.click();
document.body.removeChild(element);
}

function getMaturityLevel(totalScore) {
if (totalScore >= 1 && totalScore <= 10) {
return 'Not Mature';
} else if (totalScore >= 11 && totalScore <= 20) {
return 'Somewhat Mature';
} else if (totalScore >= 21 && totalScore <= 30) {
return 'Mature';
} else {
return 'Very Mature';
}
}

function getAdvice(maturityLevel) {
switch (maturityLevel) {
case 'Not Mature':
return 'You should invest in...';
case 'Somewhat Mature':
return 'You might consider...';
case 'Mature':
return 'Keep up the good work, but consider...';
case 'Very Mature':
return 'Congratulations! Continue to...';
default:
return '';
}
}

document.getElementById('customer-success-form').addEventListener('submit', function(event) {
event.preventDefault();

// ... (the rest of the code that calculates the total score) ...

const totalScore = q1 + q2 + q3 + q4 + q5 + q6 + q7 + q8 + q9 + q10 + q11 + q12;
const maturityLevel = getMaturityLevel(totalScore);
const advice = getAdvice(maturityLevel);

const resultText = `Total Score: ${totalScore}\nMaturity Level: ${maturityLevel}\nAdvice: ${advice}`;
document.getElementById('score').textContent = resultText.replace(/\n/g, '<br>');

// Call the downloadResult function to create and download a text file with the result
downloadResult('result.txt', resultText);
});
</script>

